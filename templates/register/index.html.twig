{% extends 'base/accueil/index.html.twig' %}

{% block title %}Enregistrement
{% endblock %}

{% block body %}
	<main class="mainLogin">
		<h1 class="h1main">{% trans %}section.createAccount{% endtrans %} </h1>
		<div>
			<input type="radio" id="option1" name="choice" value="1" checked="true" >
			<label for="option1">{% trans %}header.home{% endtrans %} {% trans %}section.user{% endtrans %}</label>
			<input type="radio" id="option2" name="choice" value="2">
			<label for="option2">{% trans %}header.home{% endtrans %} {% trans %}section.pro{% endtrans %}</label>
		</div>
		<div id="divOption1">
			{{ form_start(registerForm) }}
			{{ form_row(registerForm.nom  , {'attr': {'class': 'formNom'}}) }}
			{{ form_row(registerForm.prenom  , {'attr': {'class': 'formAttr'}}) }}
			{{ form_row(registerForm.email  , {'attr': {'class': 'formAttr'}}) }}
			{{ form_row(registerForm.telephone  , {'attr': {'class': 'formAttr'}}) }}
			{{ form_row(registerForm.plainPassword  , {'attr': {'class': 'formAttr'}}) }}
			{{ form_row(registerForm.private  ) }}
			{% for global_error in registerForm.vars.errors %}
				<div class="alert ">
					{{ global_error.message }}
				</div>
			{% endfor %}
			{{ form_row(registerForm.submit  , {'attr': {'class': 'buttonMain'}}) }}
			{{ form_end(registerForm) }}
			<a href="{{ path('app_login') }}" class="formA">{% trans %}header.login{% endtrans %}</a>
		</div>
		<div id="divOption2">
			{{ form_start(registerProForm) }}
			{{ form_row(registerProForm.nom  , {'attr': {'class': 'formNom'}}) }}
			{{ form_row(registerProForm.prenom  , {'attr': {'class': 'formAttr'}}) }}
			{{ form_row(registerProForm.metier  , {'attr': {'class': 'formAttr'}}) }}
			{{ form_row(registerProForm.email  , {'attr': {'class': 'formAttr'}}) }}
			{{ form_row(registerProForm.entreprise  , {'attr': {'class': 'formAttr'}}) }}
			{{ form_row(registerProForm.plainPassword  , {'attr': {'class': 'formAttr'}}) }}
			{% for global_error in registerProForm.vars.errors %}
				<div class="alert ">
					{{ global_error.message }}
				</div>
			{% endfor %}
			{{ form_row(registerProForm.submit  , {'attr': {'class': 'buttonMain'}}) }}
			{{ form_end(registerProForm) }}
			<a href="{{ path('app_login') }}" class="formA">{% trans %}header.login{% endtrans %}</a>
		</div>
	</main>
{% endblock %}
