{% extends 'base.html.twig' %}

{% block title %}profil
{% endblock %}

{% block body %}
	<main>
		<section class="sectionParametre">
			<h2 class="h2Parametre">Paramètres</h2>

			<form method="POST" action="{{ path('app_update_profil', {'slug': user.slug}) }}">
				<div class="divChange">
					<div class="divmail">
						<label for="email">Nouvel email :</label>
						<input type="email" id="email" name="email" required autofocus>
					</div>
					<div class="divMdp">
						<label for="password">Nouveau mot de passe :</label>
						<input type="password" id="password" name="plainPassword" required>
					</div>
					<button type="submit">Changer</button>
				</div>
				<div class="divProfilEtat">
					<h3>Profil privé :</h3>
					<input type="checkbox" name="privateProfile" id="privateProfile" {% if user.isPrivate %} checked {% endif %}>
				</div>
			</form>
		</section>

		<section class="sectionModifCV">
			<h2 class="h2Parametre">Modification CV</h2>
			<a href="{{ path('admin_user_index') }}" target="_blank">EasyAdmin</button>


		</section>
	</main>
{% endblock %}
