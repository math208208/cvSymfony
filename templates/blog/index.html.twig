{% extends layout %}

{% block title %}Explorer
{% endblock %}

{% block body %}
	<main class="container">
		<h2 class="section-title">{% trans %}header.home{% endtrans %}</h2>
		<form method="get" action="{{ path('app_blog') }}" class="search-form">
			<input type="text" name="q" placeholder="Rechercher par nom, prénom ou métier" value="{{ app.request.get('q') }}">
			<button type="submit">{% trans %}find{% endtrans %}</button>
		</form>
		<section class="sectionExplo1">

			{% for translatedUser in translatedUsers %}
				<div class="cardProfil">
					<div class="classTop">
						<img src="{{ translatedUser.user.imageName ? asset('uploads/images/' ~ translatedUser.user.imageName) : asset('build/images/default.png') }}" alt="image personne">
						<div class="nameUser">
							<p>{{ translatedUser.user.prenom }}</p>
							<p>{{ translatedUser.user.nom }}</p>
						</div>
					</div>
					<p class="professionUserProfil">{{ translatedUser.translated_profession|raw}}</p>
					<p class="descriptionUserProfil">{{ translatedUser.translated_description|raw}}</p>
					<div class="lienRedirect">
						<a href="{{ path('app_profil', {slug: translatedUser.user.slug}) }}"> 📄 {% trans %}header.home{% endtrans %}</a>
						<a href="{{ path('app_competences', {slug: translatedUser.user.slug}) }}">🛠️ {% trans %}header.skills{% endtrans %}</a>
						<a href="{{ path('app_experience', {slug: translatedUser.user.slug}) }}">🧰 {% trans %}header.experiences{% endtrans %}</a>
						<a href="{{ path('app_contact', {slug: translatedUser.user.slug}) }}">✉️ {% trans %}contact{% endtrans %}</a>
					</div>
				</div>
			{% else %}
				<p class="no-data">{% trans %}nodata{% endtrans %}</p>
			{% endfor %}


		</section>
		<div class="pagination">
			{{ knp_pagination_render(pagination) }}
		</div>
	</main>
{% endblock %}
